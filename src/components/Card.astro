---
import { Icon } from "astro-icon";
const { timeframe, title, description, url, tags, url_name } = Astro.props
---

<div class="grid grid-cols-[2fr_5fr_3fr] grid-rows-1 w-full p-2  border-b-[1px] border-dashed py-8 border-text/25">
    <div class="self-start justify-self-start">
        <p class="text-text/50 text-base">
            { timeframe }
        </p>
    </div>

    <div class="self-start  text-justify">
        <p class="text-lg text-text mb-1">{title}</p>
        <p class="text-sm text-text/90">{description}</p>
        <sub class="text-xs text-text/70">{tags}</sub>
    </div>

    <div class="self-start justify-self-end">
        <a href={url} target="_blank" class="text-base text-right text-text/70 hover:text-text/80 flex justify-center items-center">
            {url_name}
            {
                url.includes("github.com") ? <Icon name="mdi:github" class="w-9 h-9 ml-2" /> :
                url.includes("linkedin.com") ?  <Icon name="mdi:linkedin" class="w-9 h-9 ml-2" /> :
                <Icon name="icon-park-outline:unlink" class="w-4 h-4 ml-2" />
            }
        </a>
    </div>
</div>