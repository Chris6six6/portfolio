---
import * as CONTENT from "../pages/content"
---

<!-- Hero section -->
<header class="mx-auto py-8">
  <article
    class="grid grid-cols-2 grid-rows-1 place-items-left w-[98vw] max-w-3xl"
  >
    <div
      class="rounded-full border-primary self-end shadow-2xl md:w-24 w-20 aspect-square "
    >
      <img
        src="profile.jpg"
        alt="profile_picture"
        class="object-cover w-full h-full rounded-full grayscale-[50] hover:grayscale-0"
      />
    </div>

    <div class="grid text-right self-center whitespace-nowrap">
      <h1 class="text-3xl text-text mb-2">{CONTENT.name}</h1>
      <!-- <h3 class="text-lg text-text/90">{CONTENT.designation}</h3> -->
      <h5 class="text-sm text-text/70">{CONTENT.location}</h5>
    </div>

